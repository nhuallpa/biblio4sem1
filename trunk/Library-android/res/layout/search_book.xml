<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF">
  
  	<TextView
  		android:id="@+id/search_title"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="@string/search_book_title"
  		android:textSize="20dip"
  		android:textColor="#000000"
  		android:layout_marginTop="10dip"
  		android:layout_centerHorizontal="true">
  	</TextView>
  	
  	<ImageView
  		android:id="@+id/search_book_logo"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@id/search_title"
  		android:layout_centerHorizontal="true"
  		android:layout_marginTop="10dip"
  		android:src="@drawable/logo_splash">
  	</ImageView>
  	
  	<EditText
  		android:id="@+id/edit_buscar"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:hint="Search Book, Title, Author"
  		android:layout_marginTop="30dip"
  		android:layout_marginLeft="5dip"
  		android:layout_marginRight="5dip"
  		android:layout_below="@id/search_book_logo">
  	
  	</EditText>
  	
  	<ImageButton
  		android:id="@+id/search_button"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_alignParentRight="true"
  		android:background="@drawable/search_button_state"
  		android:layout_below="@id/edit_buscar">
  	
  	</ImageButton>
  	
  	<ImageButton
  		android:id="@+id/fav_button"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@id/edit_buscar"
  		android:background="@drawable/fav"
  		android:layout_marginLeft="30dip"
  		android:layout_marginTop="10dip"
  		android:visibility="invisible">
  	</ImageButton>
  	
  	<ImageButton
  		android:id="@+id/lucky_button"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@id/edit_buscar"
  		android:layout_toRightOf="@id/fav_button"
  		android:background="@drawable/lucky"
  		android:layout_marginLeft="10dip"
  		android:layout_marginTop="10dip"
  		android:visibility="invisible">
  	</ImageButton>
  	

  
</RelativeLayout>
